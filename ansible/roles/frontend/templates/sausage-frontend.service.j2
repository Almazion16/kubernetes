[Unit]
Description=Sausage Store Frontend (http-server)
After=network.target

[Service]
Type=exec
User=frontend
WorkingDirectory=/opt/sausage-store/static/frontend-1.0.2359318
ExecStart=/usr/bin/http-server  -p 80 --proxy http://localhost:8080
Restart=always
RestartSec=5

# Логирование
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=sausage-frontend

[Install]
WantedBy=multi-user.target
